{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tom-englert.de/schema/custom-appsettings.json",
  "additionalProperties": true,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "MyOptions": {
      "additionalProperties": false,
      "properties": {
        "Port": {
          "type": [
            "number",
            "null"
          ],
          "description": "The port the service is running on",
          "default": 99
        },
        "Host": {
          "type": [
            "string",
            "null"
          ],
          "description": "The host ulr running the service",
          "default": "localhost"
        },
        "SupportedCultures": {
          "type": [
            "array",
            "null"
          ],
          "description": "The supported cultures",
          "default": [
            "en-US",
            "de-DE"
          ]
        },
        "EnableVerboseLogging": {
          "type": [
            "boolean",
            "null"
          ],
          "description": "Enable verbose logging",
          "default": false
        },
        "Timeout": {
          "type": [
            "string",
            "null"
          ],
          "description": "The timeout for service calls",
          "default": "00:00:30"
        },
        "Optional": {
          "type": [
            "string",
            "null"
          ],
          "description": "Database connection strings",
          "default": null
        },
        "Required": {
          "type": [
            "string"
          ],
          "description": "A required setting without default value",
          "default": null
        }
      }
    },
    "ConnectionStrings": {
      "additionalProperties": false,
      "properties": {
        "Database": {
          "type": [
            "string",
            "null"
          ],
          "description": "The database connection string",
          "default": "Server=.;Database=MyDb;Trusted_Connection=True;"
        },
        "Password": {
          "type": [
            "string",
            "null"
          ],
          "description": "The database users password",
          "default": "*****"
        },
        "MessageQueue": {
          "type": [
            "string",
            "null"
          ],
          "description": "The message queue connection string",
          "default": "Server=.;Queue=MyQueue"
        }
      }
    }
  }
}